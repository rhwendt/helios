{
  "annotations": { "list": [] },
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "title": "CPU Utilization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "thanos" },
      "targets": [
        {
          "expr": "device_cpu_utilization{instance=~\"$device\"}",
          "legendFormat": "{{ instance }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "title": "Memory Utilization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "thanos" },
      "targets": [
        {
          "expr": "device_memory_utilization{instance=~\"$device\"}",
          "legendFormat": "{{ instance }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      }
    },
    {
      "title": "Device Uptime",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "thanos" },
      "targets": [
        {
          "expr": "sysUpTime{instance=~\"$device\"} / 100",
          "legendFormat": "{{ instance }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Temperature",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "thanos" },
      "targets": [
        {
          "expr": "device_temperature_celsius{instance=~\"$device\"}",
          "legendFormat": "{{ instance }} {{ sensor }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 70 }
            ]
          }
        }
      }
    },
    {
      "title": "Power Supply Status",
      "type": "table",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "thanos" },
      "targets": [
        {
          "expr": "device_power_supply_status{instance=~\"$device\"}",
          "legendFormat": "{{ instance }} {{ psu }}",
          "format": "table",
          "instant": true
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["helios", "device", "health"],
  "templating": {
    "list": [
      {
        "name": "site",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "thanos" },
        "query": "label_values(up{job=~\"snmp|gnmic\"}, site)",
        "includeAll": true,
        "multi": true
      },
      {
        "name": "device",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "thanos" },
        "query": "label_values(up{job=~\"snmp|gnmic\", site=~\"$site\"}, instance)",
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "title": "Device Health",
  "uid": "helios-device-health"
}
